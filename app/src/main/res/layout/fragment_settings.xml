<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:fontFamily="@font/camphorpro_medium"
        android:gravity="center"
        android:text="@string/settings"
        android:textStyle="bold"
        android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text" />
    <ScrollView
        style="@android:style/Widget.Material.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="right"
        android:scrollbarSize="5dp"
        android:layout_marginTop="60dp"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toBottomOf="@id/texto" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_marginStart="25dp"
                android:layout_height="1dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/set"
                android:layout_marginTop="10dp"
                android:layout_below="@id/separator1">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modo_oscuro"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/night_mode"
                    android:layout_below="@id/title_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/activado"
                    android:textSize="16sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="25dp"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/nightday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    style="@style/Widget.Material3.CompoundButton.Switch"

                    android:checked="false"/>

            </RelativeLayout>


            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/set"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="25dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/github"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:hapticFeedbackEnabled="true"
                android:text="@string/github"
                android:textAlignment="center"
                android:textSize="22sp"
                app:icon="@drawable/github"
                app:iconGravity="start"
                app:iconSize="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/twitter"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/github"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:hapticFeedbackEnabled="true"
                android:text="@string/twitter"
                android:textAlignment="center"
                android:textSize="22sp"
                app:icon="@drawable/twitter_logo"
                app:iconGravity="start"
                app:iconSize="20dp" />
        </RelativeLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>