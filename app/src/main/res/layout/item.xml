<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="12dp"
            android:text="@string/experimento"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            tools:ignore="RelativeOverlap,TextContrastCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/portada"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/imagen_portada"
            android:scaleType="centerCrop"
            android:src="@drawable/preset"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/semitransparencia_portada"
            android:elevation="10dp"
            android:src="@drawable/bg_item"
            tools:ignore="ImageContrastCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/titulo"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:textColor="#ffffff"
            android:text="@string/tittle"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:maxLines="2"
            android:paddingBottom="5dp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>