<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontSize="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Bienvenido"
                style="@style/TextAppearance.AppCompat.Display1" />

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bg_google"
                fontSize:tint="@color/error" />

        </LinearLayout>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/header"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:columnCount="2"
    android:rowCount="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_tool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Herramientas"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ver todo" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notification_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        fontSize:cardBackgroundColor="#9DFFF9"
                        fontSize:cardCornerRadius="20dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_round_notifications_none_24"
                            fontSize:tint="#1A5170" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Notificaiones"
                        fontSize:layout_constraintEnd_toEndOf="parent"
                        fontSize:layout_constraintStart_toStartOf="parent"
                        fontSize:layout_constraintTop_toBottomOf="@+id/notification_card"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/battery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/battery_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        fontSize:cardBackgroundColor="#9DFFD0"
                        fontSize:cardCornerRadius="20dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_round_battery_full_24"
                            fontSize:tint="#1A7041" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="BaterÃ­a"
                        fontSize:layout_constraintEnd_toEndOf="parent"
                        fontSize:layout_constraintStart_toStartOf="parent"
                        fontSize:layout_constraintTop_toBottomOf="@+id/battery_card"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/system"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/system_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        fontSize:cardBackgroundColor="#D49DFF"
                        fontSize:cardCornerRadius="20dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"

                            android:padding="10dp"
                            android:src="@drawable/ic_outline_info_24"
                            fontSize:tint="#4A1A70" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Sistema"
                        fontSize:layout_constraintEnd_toEndOf="parent"
                        fontSize:layout_constraintStart_toStartOf="parent"
                        fontSize:layout_constraintTop_toBottomOf="@+id/system_card"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/apps_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        fontSize:cardBackgroundColor="#FDFF9D"
                        fontSize:cardCornerRadius="20dp"
                        tools:ignore="MissingConstraints">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/ic_outline_apps_24"
                            fontSize:tint="#64701A" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Aplicaciones"
                        fontSize:layout_constraintEnd_toEndOf="parent"
                        fontSize:layout_constraintStart_toStartOf="parent"
                        fontSize:layout_constraintTop_toBottomOf="@+id/apps_card"
                        tools:ignore="MissingConstraints" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </GridLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/header_news"
            android:layout_rowWeight="0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Destacado"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <Button
                android:id="@+id/button_news"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ver todo" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_news"
            android:layout_marginBottom="20dp" />
        <TextView
            android:id="@+id/error_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_news"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="@string/error_noticias"
            android:textAlignment="center"
            style="@style/TextAppearance.Material3.TitleMedium"
            />
    </LinearLayout>
</GridLayout>



    </RelativeLayout>