<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daviddf.geeklab">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name="com.daviddf.geeklab.Google">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/google_info" />
        </receiver>
        <receiver android:name="com.daviddf.geeklab.NotiWidg">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/noti_widg_info" />
        </receiver>
        <receiver android:name="com.daviddf.geeklab.LoopWidgt">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/loop_widgt_info" />
        </receiver>
        <receiver android:name="com.daviddf.geeklab.fecha">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/fecha_info" />
        </receiver>
        <receiver android:name="com.daviddf.geeklab.Hora">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="ACTION_AUTO_UPDATE_WIDGET" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hora_info" />
        </receiver>

        <activity
            android:name="com.daviddf.geeklab.Countdown"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daviddf.geeklab.Loop2"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daviddf.geeklab.Loop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daviddf.geeklab.Notifiaction"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daviddf.geeklab.Menu"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daviddf.geeklab.Consentimiento"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.daviddf.geeklab.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>